<% if @todo.errors.any?%>
  <h2>The following errors prevented the todo from being saved</h2>
  <UL>
    <%@todo.errors.full_messages.each do |msg|%>
      <LI><%=msg%></LI>
    <%end%>
  </UL>
<%end%>
<%=form_for @todo do |f|%>
  <p>
    <%= f.label :name%>
    <%= f.text_field :name%>
  </p> <br>

  <p>
    <%= f.label :description%>
    <%= f.text_field :desc%>
  </p><br>
  <p><%= f.submit%></p>

<%end%>